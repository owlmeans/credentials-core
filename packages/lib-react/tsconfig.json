{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    // "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // "isolatedModules": true
  },
  "exclude": [
    "./dist/**/*",
    "./example-web/**/*"
  ]
}