  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests - Core: context",
      "skipFiles": [
        "<node_internals>/**",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceRoot}/packages/core/.env",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/core/node_modules/.bin/jest",
        "--runInBand",
        "--coverage",
        "false",
        "--rootDir",
        "${workspaceRoot}/packages/core/",
        "--config",
        "${workspaceRoot}/packages/core/jest.config.js",
        "--testTimeout",
        "180000",
        "context"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug - Core: context",
      "skipFiles": [
        "<node_internals>/**",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceRoot}/packages/core/.env",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/core/node_modules/.bin/ts-node",
        "--project",
        "${workspaceRoot}/packages/core/tsconfig.json",
        "--ignore" ,
        ".js",
        "${workspaceRoot}/packages/core/src/debug/context.ts"
      ],
    }
  ]
}